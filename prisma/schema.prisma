// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("session")
}

model User {
  id           String    @id @unique
  username     String    @unique
  session      Session[]
  Key          Key[]
  wantToRead   Book[]    @relation("Want Read")
  justReading  Book[]    @relation("Just Reading")
  finishedList Book[]    @relation("Finished")
  favorites    Book[]    @relation("Favorites")
  comments     Comment[]

  @@map("user")
}

model Key {
  id              String  @id @unique
  hashed_password String?
  user_id         String
  primary         Boolean
  expires         BigInt?
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
  @@map("key")
}

model Book {
  id             Int       @id @default(autoincrement())
  createdAt      DateTime  @default(now())
  title          String
  author         String
  description    String    @db.Text
  image          String    @db.Text
  usersWantRead  User[]    @relation("Want Read")
  usersFinished  User[]    @relation("Finished")
  usersReading   User[]    @relation("Just Reading")
  usersFavorites User[]    @relation("Favorites")
  comments       Comment[]
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  book      Book     @relation(fields: [bookId], references: [id])
  bookId    Int
  user      User     @relation(fields: [userId], references: [id])
  userId    String

  @@index([userId])
  @@index([bookId])
}
